<Window
    x:Class="WPF_Textbox___Knapp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Textbox___Knapp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <TextBox x:Name="TextLåda" Height="30" />
        </StackPanel>
        <Button
            x:Name="Knapp"
            Width="125"
            Height="80"
            Click="Knapp_Click"
            Content="Tryck Här!"
            FontSize="25" />
    </DockPanel>
</Window>
