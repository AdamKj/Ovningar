<Window
    x:Class="Enable_Disable_Knappar.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Enable_Disable_Knappar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="Enable"
            Width="120"
            Height="80"
            Margin="0,0,120,0"
            HorizontalAlignment="Center"
            Click="Enable_Click"
            Content="Enable"
            FontSize="25"
            IsEnabled="True" />
        <Button
            x:Name="Disable"
            Width="120"
            Height="80"
            Margin="120,0,0,0"
            HorizontalAlignment="Center"
            Click="Disable_Click"
            Content="Disable"
            FontSize="25"
            IsEnabled="False" />
    </Grid>
</Window>
