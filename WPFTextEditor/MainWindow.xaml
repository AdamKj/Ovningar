<Window
    x:Class="WPFTextEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFTextEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WPFTextEditor.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Image Viewer">
            <local:ImageViewer />
        </TabItem>
        <TabItem Header="Text Editor">
            <local:TextEditor />
        </TabItem>
        <TabItem Header="Demo">
            <local:Demo />
        </TabItem>
        <TabItem Header="Views">
            <views:Button />
        </TabItem>
    </TabControl>
</Window>
